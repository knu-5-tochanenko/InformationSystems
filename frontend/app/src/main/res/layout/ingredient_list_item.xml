<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ingredient_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/brown_800"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/ingredient_item_url"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ingredient_item_amount_unit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="@color/brown_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ingredient_item_name"
        app:layout_constraintStart_toStartOf="@+id/ingredient_item_name"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_item_name" />

    <Button
        android:id="@+id/ingredient_item_url"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:icon="@drawable/ic_round_arrow_forward_24"
        app:iconGravity="end"
        app:layout_constraintBottom_toBottomOf="@+id/ingredient_item_amount_unit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ingredient_item_name" />
</androidx.constraintlayout.widget.ConstraintLayout>